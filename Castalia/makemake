#perl -i.bak -pe "s|^(./)?Unsupported/.*||" nedfiles.lst
#perl -i.qexirbak -pe "s|^(./)?Obsolete/.*||" nedfiles.lst
#perl -i.bak -pe "s|^(./)?Tests/.*||" nedfiles.lst
echo 'Done'

